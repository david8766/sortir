    <div class="container">
        <div class="row my-4">
            <form name="filtreSortie" method="post">
                <fieldset>
                    <legend>Filtrer les sorties</legend>
                    <div class="col1">
                        <div class="campus">
                            <label for="campus">Campus : </label>
                            <select name="campus" id="campus" class="form-select">
                                <option value="">-- Tous les campus --</option>
                                {% for c in campusList %}
                                    <option value="{{ c.id }}">{{ c.nom }}</option>
                                {% endfor %}
                                {% if campusActif != null %}
                                    <option selected value="{{ campusActif.id }}">{{ campusActif.nom }}</option>
                                {% endif %}

                            </select>
                        </div><br>

                        <div class="form-group has-search">
                            <label for="rechercheParNom">Le nom de la sortie contient : </label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-search"> </i>
                                </div>
                                <input type="search" class="form-control" name="rechercheParNom" id="rechercheParNom" placeholder="search" value="{{ recherche }}">
                            </div>
                        </div><br>

                        <div class="dates form-group">

                            <div class="input-group align-items-center">
                                Entre le <input type="date" class="form-control" id="dateDebut" name="dateDebut" value="{{ dateDebut }}">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar">
                                    </i>
                                </div>
                                et le <input type="date" class="form-control ml-2" id="dateFin" name="dateFin" value="{{ dateFin }}">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar">
                                    </i>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col2 form-check " id="mesSorties">

                        <input type="checkbox"  class="form-check-input" id="mesSortiesOrganisees" name="mesSortiesOrganisees" value="{{ app.User.id }}"
                                {% if organisateur != null %} checked {% endif %}>
                        <label for="mesSortiesOrganisees" class="form-check-label">Sorties dont je suis l'organisateur/trice</label><br>

                        <input type="checkbox" class="form-check-input" id="sortiesCommeInscrit" name="sortiesCommeInscrit" value="{{ app.User.id }}"
                                {% if sortiesCommeInscrit != null %} checked {% endif %}>
                        <label for="sortiesCommeInscrit" class="form-check-label">Sorties auxquelles je suis inscrit/e</label><br>

                        <input type="checkbox" class="form-check-input" id="sortiesNonInscrit" name="sortiesNonInscrit" value="{{ app.User.id }}"
                                {% if sortiesNonInscrit != null %} checked {% endif %}>
                        <label for="sortiesNonInscrit" class="form-check-label">Sorties auxquelles je ne suis pas inscrit/e</label><br>

                        <input type="checkbox" class="form-check-input" id="sortiesPassees" name="etatSortiesPassees" value="4"
                                {% if etatSortiesPassees != null %} checked {% endif %}>
                        <label for="sortiesPassees" class="form-check-label">Sorties pass√©es</label><br><br>

                        <button class="btn btn-primary" type="submit">Rechercher/Actualiser</button>
                    </div>
                </fieldset>

            </form>


        </div>
    </div>

