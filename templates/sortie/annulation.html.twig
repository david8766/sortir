{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset ('css/sortie.css') }}">
{% endblock %}

{% block title %}Annulation de la sortie{% endblock %}

{% block main %}

    {{ form_start(form) }}
    <div class="row my-4 justify-content-center mx-">
        <div class="col col-sm-12 col-md-5">
            <h1>Annulation de la sortie<br>"{{ sortie.nom }}"</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Date de la sortie</th>
                        <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Campus</th>
                        <td>{{ sortie.campus.nom }}</td>
                    </tr>
                    <tr>
                        <th>Motif d'annulation</th>
                        <td>{{ form_row(form.motifAnnulation) }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="boutons">
                <a href="{{ path('sortie_edit', {'noSortie': sortie.noSortie}) }}" class="btn btn-primary">Retour</a>
            </div>
            <div class="boutons">
                <button class="btn btn-danger">Enregistrer</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
