{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset ('css/sortie.css') }}">
{% endblock %}

{% block title %}Modifier la sortie{% endblock %}

{% block main %}

    <h1>Modifier la sortie</h1>

    <div class="colSortie">
        {{ include('sortie/_form.html.twig', {'button_label': 'Enregistrer'}) }}
        {% if sortie.etat.id==1 %}
            <div class="boutons">
                {{ include('sortie/_annuler_form.html.twig') }}
            </div>
        {% endif %}
        {% if sortie.etat.id==0 %}
            <div class="boutons">
                {{ include('sortie/_publier_form.html.twig') }}
            </div>
            <div class="boutons">
                {{ include('sortie/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>

{% endblock %}
