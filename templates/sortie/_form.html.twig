{{ form_start(form) }}

<div class="container-fluid ">

    <div class="row my-1 justify-content-center">

        <div class="col-12 col-sm-12 col-md-3">
            <div class="etat">
                &gt; {{ sortie.etat.libelle }}
            </div>
            {{ form_row(form.nom) }}
            {{ form_row(form.dateHeureDebut) }}
            {{ form_row(form.duree) }}
            {{ form_row(form.dateCloture) }}
            {{ form_row(form.nbInscriptionsMax) }}
        </div>

        <div class="col-12 col-sm-12 col-md-4">
            <div class="etat">
                Organis√©e par {{ sortie.organisateur.nomPrenom }}
            </div>
            {{ form_row(form.description) }}
            {{ form_row(form.campus) }}
            {# {{ form_row(form.ville) }} #}
            {{ form_row(form.lieu) }}
            {% if sortie.lieu  %}
                <div class="lieu">
                    {{ sortie.lieu.NomLieu }}<br>
                    {{ sortie.lieu.rue }}<br>
                    {{ sortie.lieu.ville.codepostal }} {{ sortie.lieu.ville.nom }}<br>
                </div>
                <br>
            {% endif %}
            <div class="boutons">
                <a href="{{ path('lieu_new') }}" class="">Ajouter un lieu</a>
            </div>
        </div>

    </div>

    <div class="row my-4 justify-content-center">
        <div class="col-12 col-sm-12 col-md-7">
            <div class="boutons">
                <button class="btn btn-primary" onclick="history.go(-1)">Retour</button>
            </div>
            <div class="boutons">
                <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
            </div>
        </div>
    </div>

</div>

{{ form_end(form) }}





