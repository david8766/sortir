{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>input{margin-left: 0px}</style>
{% endblock %}

{% block title %}Sortir.com | Administration{% endblock %}

{% block main %}
    <main class="container-fluid">
        <div class="row text-center">
            <h1 class="my-5">Administration du site Sortir.com</h1>
            <h2>Liste des utilisateurs :</h2>
        </div>
        <div class="container">
            <a href="{{ path ('admin.create.user') }}" class="btn btn-success my-3">Créer un utilisateur</a>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom complet</th>
                    <th scope="col">Email</th>
                    <th scope="col">Campus</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.getNomPrenom() }}</td>
                        <td>{{ user.mail }}</td>
                        <td>{{ user.campus.nom }}</td>
                        <td>
                            <a href="">Désactivation</a>
                            <a href="{{ path ('delete.user', {'id':  user.id}) }}">Suppression</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="container pagination justify-content-center">
                <div class="row my-3">
                    {{ knp_pagination_render(users) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}