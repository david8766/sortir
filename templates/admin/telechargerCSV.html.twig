{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>input{margin-left: 0px}</style>
{% endblock %}

{% block title %}Sortir.com | Administration{% endblock %}

{% block main %}
    <main class="container">
        <div class="row text-center ">
            <h1 class="my-5">Administration du site Sortir.com</h1>
            <h2>Télécharger un fichier CSV :</h2>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                {{ form_start(csvForm) }}
                {{ form_widget(csvForm) }}
                <button type="submit" class="btn btn-success my-3">Valider</button>
                <a href="{{ path('admin') }}" class="btn btn-danger my-3 ml-2">Annuler</a>
                {{ form_end(csvForm) }}
            </div>
        </div>
    </main>
{% endblock %}